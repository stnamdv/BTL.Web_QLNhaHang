@model BTL.Web.Models.NguyenLieuWithMon

@{
    ViewData["Title"] = "Chi tiết nguyên liệu";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.NguyenLieu.nl_id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    @TempData["Error"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                    }

                    <div class="row">
                        <!-- Thông tin cơ bản -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-info-circle"></i> Thông tin cơ bản
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">Tên nguyên liệu:</dt>
                                        <dd class="col-sm-8">
                                            <strong>@Model.NguyenLieu.ten</strong>
                                        </dd>

                                        <dt class="col-sm-4">Đơn vị:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-secondary fs-6">@Model.NguyenLieu.don_vi</span>
                                        </dd>

                                        <dt class="col-sm-4">Nguồn gốc:</dt>
                                        <dd class="col-sm-8">
                                            <div class="bg-light p-3 rounded">
                                                @Model.NguyenLieu.nguon_goc
                                            </div>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Thống kê sử dụng -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-chart-pie"></i> Thống kê sử dụng
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <div class="col-6">
                                            <h3 class="text-primary">@Model.Mons.Count()</h3>
                                            <small class="text-muted">Số món sử dụng</small>
                                        </div>
                                        <div class="col-6">
                                            <h3 class="text-success">@Model.Mons.Sum(m => m.dinh_luong).ToString("N3")</h3>
                                            <small class="text-muted">Tổng định lượng</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Danh sách món sử dụng -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-utensils"></i> Các món ăn sử dụng nguyên liệu này
                                    </h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.Mons.Any())
                                    {
                                                <div class="table-responsive">
                                                    <table class="table table-striped table-hover">
                                                        <thead class="table-dark">
                                                            <tr>
                                                                <th>Mã món</th>
                                                                <th>Tên món</th>
                                                                <th>Loại món</th>
                                                                <th>Định lượng</th>
                                                                <th>Đơn vị</th>
                                                                <th class="text-center">Thao tác</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var mon in Model.Mons)
                                                            {
                                                                        <tr>
                                                                            <td>
                                                                                <span class="badge bg-secondary">@mon.ma_mon</span>
                                                                            </td>
                                                                            <td>
                                                                                <strong>@mon.ten_mon</strong>
                                                                            </td>
                                                                            <td>
                                                                                @{
                                                                                            var loaiMonText = mon.loai_mon switch
                                                                                            {
                                                                                                        "KHAI_VI" => "Khai vị",
                                                                                                        "MON_CHINH" => "Món chính",
                                                                                                        "TRANG_MIENG" => "Tráng miệng",
                                                                                                        _ => mon.loai_mon
                                                                                            };
                                                                                }
                                                                                <span class="badge bg-info">@loaiMonText</span>
                                                                            </td>
                                                                            <td>
                                                                                <span class="badge bg-primary">@mon.dinh_luong.ToString("N3")</span>
                                                                            </td>
                                                                            <td>@Model.NguyenLieu.don_vi</td>
                                                                            <td class="text-center">
                                                                                <a asp-controller="Mon" asp-action="Details" asp-route-id="@mon.mon_id" 
                                                                                   class="btn btn-sm btn-outline-info" title="Xem chi tiết món">
                                                                                    <i class="fas fa-eye"></i>
                                                                                </a>
                                                                            </td>
                                                                        </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                    }
                                    else
                                    {
                                                <div class="text-center py-4">
                                                    <i class="fas fa-info-circle fa-2x text-info mb-2"></i>
                                                    <p class="text-muted">Nguyên liệu này chưa được sử dụng trong món ăn nào</p>
                                                </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
