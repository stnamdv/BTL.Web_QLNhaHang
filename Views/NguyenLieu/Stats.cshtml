@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Thống kê nguyên liệu";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-chart-bar"></i> @ViewData["Title"]
                    </h3>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="row">
                            @foreach (var stat in Model)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card border-primary">
                                        <div class="card-header bg-primary text-white">
                                            <h5 class="card-title mb-0">
                                                <i class="fas fa-leaf"></i> @stat.ten
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="row text-center">
                                                <div class="col-6">
                                                    <h4 class="text-primary">@stat.so_mon_su_dung</h4>
                                                    <small class="text-muted">Món sử dụng</small>
                                                </div>
                                                <div class="col-6">
                                                    <h4 class="text-success">@stat.so_lan_nhap</h4>
                                                    <small class="text-muted">Lần nhập</small>
                                                </div>
                                            </div>
                                            <hr>
                                            <div class="row">
                                                <div class="col-6">
                                                    <small class="text-muted">Tổng số lượng:</small>
                                                    <br>
                                                    <strong class="text-info">@(((decimal)stat.tong_so_luong_nhap).ToString("N3")) @stat.don_vi</strong>
                                                </div>
                                                <div class="col-6">
                                                    <small class="text-muted">Giá TB:</small>
                                                    <br>
                                                    <strong class="text-warning">@(((decimal)stat.gia_trung_binh).ToString("N0")) ₫</strong>
                                                </div>
                                            </div>
                                            @if (stat.lan_nhap_cuoi != null)
                                            {
                                                <hr>
                                                <div class="text-center">
                                                    <small class="text-muted">Lần nhập cuối:</small>
                                                    <br>
                                                    <strong>@(((DateTime)stat.lan_nhap_cuoi).ToString("dd/MM/yyyy"))</strong>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Tổng kết -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card border-success">
                                    <div class="card-header bg-success text-white">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-chart-pie"></i> Tổng kết
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row text-center">
                                            <div class="col-md-3">
                                                <h4 class="text-primary">@Model.Count()</h4>
                                                <small class="text-muted">Tổng nguyên liệu</small>
                                            </div>
                                            <div class="col-md-3">
                                                <h4 class="text-success">@Model.Sum(s => (int)s.so_mon_su_dung)</h4>
                                                <small class="text-muted">Tổng món sử dụng</small>
                                            </div>
                                            <div class="col-md-3">
                                                <h4 class="text-info">@Model.Sum(s => (int)s.so_lan_nhap)</h4>
                                                <small class="text-muted">Tổng lần nhập</small>
                                            </div>
                                            <div class="col-md-3">
                                                <h4 class="text-warning">@(((decimal)Model.Average(s => (decimal)s.gia_trung_binh)).ToString("N0")) ₫</h4>
                                                <small class="text-muted">Giá TB chung</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Biểu đồ -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-chart-bar"></i> Biểu đồ số món sử dụng theo nguyên liệu
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <canvas id="usageChart" width="400" height="200"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Không có dữ liệu thống kê</h5>
                            <p class="text-muted">Hãy thêm nguyên liệu để xem thống kê!</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Thêm nguyên liệu
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        @if (Model.Any())
        {
            <text>
            const statsData = @Html.Raw(Json.Serialize(Model));
            
            const ctx = document.getElementById('usageChart').getContext('2d');
            const chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: statsData.map(s => s.ten),
                    datasets: [{
                        label: 'Số món sử dụng',
                        data: statsData.map(s => s.so_mon_su_dung),
                        backgroundColor: 'rgba(54, 162, 235, 0.8)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return 'Số món: ' + context.parsed.y;
                                }
                            }
                        }
                    }
                }
            });
            </text>
        }
    </script>
}
