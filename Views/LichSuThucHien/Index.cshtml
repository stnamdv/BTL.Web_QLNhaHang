@model PagedResult<BTL.Web.Models.LichSuThucHienWithDetails>

@{
    ViewData["Title"] = "Lịch sử thực hiện quy trình";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div>
                        <a asp-action="GetDangXuLy" class="btn btn-warning">
                            <i class="fas fa-clock"></i> Đang xử lý
                        </a>
                        <a asp-action="ThongKe" class="btn btn-info">
                            <i class="fas fa-chart-bar"></i> Thống kê
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    @TempData["SuccessMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    @TempData["ErrorMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                    }

                    @if (Model.Items.Any())
                    {
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Đơn hàng</th>
                                                <th>Bàn</th>
                                                <th>Thông tin</th>
                                                <th>Bước xử lý</th>
                                                <th>Nhân viên</th>
                                                <th>Trạng thái</th>
                                                <th>Thời gian</th>
                                                <th>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Items)
                                            {
                                                        <tr>
                                                            <td>
                                                                <strong>#@item.order_id</strong>
                                                            </td>
                                                            <td>
                                                                @if (item.ban_so_hieu != null)
                                                                {
                                                                            <span class="badge bg-primary">@item.ban_so_hieu</span>
                                                                }
                                                                else
                                                                {
                                                                            <span class="badge bg-secondary">Mang về</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                <small class="text-muted">Đơn hàng #@item.order_id</small>
                                                            </td>
                                                            <td>
                                                                <span class="badge bg-info">@item.ten_buoc</span>
                                                                <br><small class="text-muted">Bước @item.thu_tu</small>
                                                            </td>
                                                            <td>
                                                                <strong>@item.nv_ho_ten</strong>
                                                                <br><small class="text-muted">@item.loai_nv</small>
                                                            </td>
                                                            <td>
                                                                @switch (item.trang_thai)
                                                                {
                                                                            case "CHUA_HOAN_THANH":
                                                                                        <span class="badge bg-secondary">Chưa hoàn thành</span>
                                                                                        break;
                                                                            case "HOAN_THANH":
                                                                                        <span class="badge bg-warning">Hoàn thành</span>
                                                                                        break;
                                                                            case "DA_HUY":
                                                                                        <span class="badge bg-success">Đã hủy</span>
                                                                                        break;
                                                                            default:
                                                                                        <span class="badge bg-light text-dark">@item.trang_thai</span>
                                                                                        break;
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (item.thoi_diem_bat_dau.HasValue)
                                                                {
                                                                            <small class="text-muted">
                                                                                Bắt đầu: @item.thoi_diem_bat_dau.Value.ToString("HH:mm")<br>
                                                                                @if (item.thoi_diem_ket_thuc.HasValue)
                                                                                {
                                                                                            <span>Kết thúc: @item.thoi_diem_ket_thuc.Value.ToString("HH:mm")</span>
                                                                                            @if (item.thoi_gian_thuc_hien_phut.HasValue)
                                                                                            {
                                                                                                        <br>
                                                            
                                                                                                        <span class="badge bg-info">@item.thoi_gian_thuc_hien_phut phút</span>
                                                                                            }
                                                                                }
                                                                            </small>
                                                                }
                                                                else
                                                                {
                                                                            <small class="text-muted">Chưa bắt đầu</small>
                                                                }
                                                            </td>
                                                            <td>
                                                                <div class="btn-group" role="group">
                                                                    <a asp-action="Details" asp-route-id="@item.lich_su_id" class="btn btn-sm btn-info">
                                                                        <i class="fas fa-eye"></i>
                                                                    </a>
                                                                    @if (item.trang_thai == "CHUA_HOAN_THANH")
                                                                    {
                                                                                <button class="btn btn-sm btn-success" onclick="batDau(@item.lich_su_id)">
                                                                                    <i class="fas fa-play"></i>
                                                                                </button>
                                                                    }
                                                                    @if (item.trang_thai == "HOAN_THANH")
                                                                    {
                                                                                <button class="btn btn-sm btn-warning" onclick="hoanThanh(@item.lich_su_id)">
                                                                                    <i class="fas fa-check"></i>
                                                                                </button>
                                                                    }
                                                                </div>
                                                            </td>
                                                        </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Pagination -->
                                @await Html.PartialAsync("_Pagination", Model)
                    }
                    else
                    {
                                <div class="text-center py-5">
                                    <i class="fas fa-history fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">Chưa có lịch sử thực hiện nào</h5>
                                    <p class="text-muted">Lịch sử thực hiện sẽ được tạo khi bắt đầu xử lý đơn hàng.</p>
                                </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
            <script>
                function batDau(lichSuId) {
                    if (confirm('Bạn có chắc chắn muốn bắt đầu thực hiện bước này?')) {
                        $.post('/LichSuThucHien/BatDau', { lichSuId: lichSuId })
                            .done(function(data) {
                                if (data.success) {
                                    location.reload();
                                } else {
                                    alert('Lỗi: ' + data.message);
                                }
                            })
                            .fail(function() {
                                alert('Có lỗi xảy ra khi bắt đầu thực hiện');
                            });
                    }
                }

                function hoanThanh(lichSuId) {
                    const ghiChu = prompt('Nhập ghi chú (tùy chọn):');
                    if (ghiChu !== null) {
                        $.post('/LichSuThucHien/HoanThanh', { lichSuId: lichSuId, ghiChu: ghiChu })
                            .done(function(data) {
                                if (data.success) {
                                    location.reload();
                                } else {
                                    alert('Lỗi: ' + data.message);
                                }
                            })
                            .fail(function() {
                                alert('Có lỗi xảy ra khi hoàn thành');
                            });
                    }
                }
            </script>
}
