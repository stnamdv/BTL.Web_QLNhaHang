@model IEnumerable<BTL.Web.Models.ThongKeHieuSuat>

@{
    ViewData["Title"] = "Thống kê hiệu suất nhân viên";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Filter Form -->
                    <form method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-3">
                                <label class="form-label">Nhân viên</label>
                                <select name="nvId" class="form-select">
                                    <option value="">-- Tất cả nhân viên --</option>
                                    <!-- Sẽ được load từ API -->
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Bước xử lý</label>
                                <select name="buocId" class="form-select">
                                    <option value="">-- Tất cả bước --</option>
                                    <!-- Sẽ được load từ API -->
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Từ ngày</label>
                                <input type="date" name="tuNgay" class="form-control" />
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Đến ngày</label>
                                <input type="date" name="denNgay" class="form-control" />
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i> Lọc
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>

                    @if (Model.Any())
                    {
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Nhân viên</th>
                                                <th>Loại nhân viên</th>
                                                <th>Bước xử lý</th>
                                                <th>Số lần thực hiện</th>
                                                <th>Thời gian TB (phút)</th>
                                                <th>Nhanh nhất (phút)</th>
                                                <th>Chậm nhất (phút)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                        <tr>
                                                            <td>
                                                                <strong>@item.nv_ho_ten</strong>
                                                            </td>
                                                            <td>
                                                                <span class="badge bg-info">@item.loai_nv</span>
                                                            </td>
                                                            <td>
                                                                <span class="badge bg-primary">@item.ten_buoc</span>
                                                            </td>
                                                            <td>
                                                                <span class="badge bg-success">@item.so_luong_thuc_hien</span>
                                                            </td>
                                                            <td>
                                                                @if (item.thoi_gian_trung_binh_phut.HasValue)
                                                                {
                                                                            <span class="badge bg-info">@item.thoi_gian_trung_binh_phut.Value.ToString("F1")</span>
                                                                }
                                                                else
                                                                {
                                                                            <span class="text-muted">-</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (item.thoi_gian_nhanh_nhat_phut.HasValue)
                                                                {
                                                                            <span class="badge bg-success">@item.thoi_gian_nhanh_nhat_phut</span>
                                                                }
                                                                else
                                                                {
                                                                            <span class="text-muted">-</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (item.thoi_gian_cham_nhat_phut.HasValue)
                                                                {
                                                                            <span class="badge bg-warning">@item.thoi_gian_cham_nhat_phut</span>
                                                                }
                                                                else
                                                                {
                                                                            <span class="text-muted">-</span>
                                                                }
                                                            </td>
                                                        </tr>
                                            }
                                </tbody>
                            </table>
                        </div>

                        <!-- Summary Cards -->
                        <div class="row mt-4">
                            <div class="col-md-3">
                                <div class="card bg-primary text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="card-title">@Model.Count()</h4>
                                                <p class="card-text">Nhân viên có thống kê</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-users fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="card-title">@Model.Sum(x => x.so_luong_thuc_hien)</h4>
                                                <p class="card-text">Tổng số lần thực hiện</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-tasks fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="card-title">
                                                    @(Model.Where(x => x.thoi_gian_trung_binh_phut.HasValue).Any()
                                                                                                                                                                                                                                ? Model.Where(x => x.thoi_gian_trung_binh_phut.HasValue).Average(x => x.thoi_gian_trung_binh_phut.Value).ToString("F1")
                                                                                                                                                                                                                                : "0")
                                                </h4>
                                                <p class="card-text">Thời gian TB chung (phút)</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-clock fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h4 class="card-title">@Model.Select(x => x.loai_nv).Distinct().Count()</h4>
                                                <p class="card-text">Loại nhân viên</p>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-user-tag fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                                                                                }
                    else
                    {
                                <div class="text-center py-5">
                                    <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">Không có dữ liệu thống kê</h5>
                                    <p class="text-muted">Chưa có dữ liệu thống kê cho khoảng thời gian được chọn.</p>
                                </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
            <script>
                $(document).ready(function() {
                    loadNhanVien();
                    loadBuocXuLy();
                });

                function loadNhanVien() {
                    $.get('/NhanVien/GetAll')
                        .done(function(data) {
                            const select = $('select[name="nvId"]');
                            select.empty().append('<option value="">-- Tất cả nhân viên --</option>');
                    
                            data.forEach(function(nv) {
                                select.append(`<option value="${nv.nv_id}">${nv.ho_ten} (${nv.loai_nv})</option>`);
                            });
                        })
                        .fail(function() {
                            console.error('Lỗi khi tải danh sách nhân viên');
                        });
                }

                function loadBuocXuLy() {
                    $.get('/BuocXuLy/GetAll')
                        .done(function(data) {
                            const select = $('select[name="buocId"]');
                            select.empty().append('<option value="">-- Tất cả bước --</option>');
                    
                            data.forEach(function(buoc) {
                                select.append(`<option value="${buoc.buoc_id}">${buoc.thu_tu}. ${buoc.ten_buoc}</option>`);
                            });
                        })
                        .fail(function() {
                            console.error('Lỗi khi tải danh sách bước xử lý');
                        });
                }
            </script>
}
