@model dynamic
@{
    ViewData["Title"] = "Chi tiết Nhà cung cấp";
    var thongKe = Model.ThongKe as BTL.Web.Models.ThongKeNhaCungCapNguyenLieu;
    var chiTiet = Model.ChiTiet as List<BTL.Web.Models.ChiTietNhaCungCapNguyenLieu>;
    var tongChi = Model.TongChi as BTL.Web.Models.TongChiNhaCungCap;
    var nhaCungCap = ViewBag.NhaCungCap as BTL.Web.Models.NhaCungCap;
    var thangHienTai = ViewBag.ThangHienTai as int? ?? DateTime.Now.Month;
    var namHienTai = ViewBag.NamHienTai as int? ?? DateTime.Now.Year;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "ThongKeNhaCungCap")">Thống kê Nhà cung cấp</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                </ol>
            </nav>

            <!-- Thông tin nhà cung cấp -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-building"></i>
                        Thông tin Nhà cung cấp: @nhaCungCap?.ten
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Tên nhà cung cấp:</strong></td>
                                    <td>@nhaCungCap?.ten</td>
                                </tr>
                                <tr>
                                    <td><strong>Địa chỉ:</strong></td>
                                    <td>@(nhaCungCap?.dia_chi ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <td><strong>Số điện thoại:</strong></td>
                                    <td>@(nhaCungCap?.sdt ?? "N/A")</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Tháng thống kê:</strong></td>
                                    <td>@thangHienTai/@namHienTai</td>
                                </tr>
                                @if (tongChi != null)
                                {
                                    <tr>
                                        <td><strong>Tổng giá trị:</strong></td>
                                        <td><span class="badge badge-success">@tongChi.tong_gia_tri.ToString("N0")
                                                VNĐ</span></td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Thống kê tổng quan -->
            @if (tongChi != null)
            {
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-chart-line"></i>
                                    Tổng giá trị sử dụng nguyên liệu
                                </h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="info-box">
                                            <span class="info-box-icon bg-success">
                                                <i class="fas fa-dollar-sign"></i>
                                            </span>
                                            <div class="info-box-content">
                                                <span class="info-box-text">Tổng giá trị</span>
                                                <span class="info-box-number">@tongChi.tong_gia_tri.ToString("N0")
                                                    VNĐ</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="info-box">
                                            <span class="info-box-icon bg-info">
                                                <i class="fas fa-building"></i>
                                            </span>
                                            <div class="info-box-content">
                                                <span class="info-box-text">Nhà cung cấp</span>
                                                <span class="info-box-number">@tongChi.ten</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Chi tiết nguyên liệu -->
            <div class="card mt-4">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-list"></i>
                        Chi tiết Nguyên liệu sử dụng trong tháng @thangHienTai/@namHienTai
                    </h3>
                </div>
                <div class="card-body">
                    @if (chiTiet != null && chiTiet.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>STT</th>
                                        <th>Tên nhà cung cấp</th>
                                        <th>Tên nguyên liệu</th>
                                        <th>Đơn vị</th>
                                        <th>Giá nhập (VNĐ)</th>
                                        <th>Tổng sử dụng</th>
                                        <th>Tổng giá trị (VNĐ)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int stt = 1;
                                    }
                                    @foreach (var item in chiTiet)
                                    {
                                        <tr>
                                            <td>@stt</td>
                                            <td>
                                                <span class="badge badge-info">@item.ten</span>
                                            </td>
                                            <td>
                                                <strong>@item.ten_nguyen_lieu</strong>
                                            </td>
                                            <td>
                                                <span class="badge badge-secondary">@item.don_vi</span>
                                            </td>
                                            <td>
                                                <span class="text-primary font-weight-bold">
                                                    @item.gia_nhap.ToString("N0") VNĐ
                                                </span>
                                            </td>
                                            <td>
                                                <span class="text-success font-weight-bold">
                                                    @item.tong_su_dung.ToString("N2") @item.don_vi
                                                </span>
                                            </td>
                                            <td>
                                                <span class="text-warning font-weight-bold">
                                                    @item.tong_gia_tri.ToString("N0") VNĐ
                                                </span>
                                            </td>
                                        </tr>
                                        stt++;
                                    }
                                </tbody>
                            </table>
                        </div>

                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            Không có dữ liệu chi tiết nguyên liệu cho nhà cung cấp này trong tháng @thangHienTai/@namHienTai
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                        </div>
                        <div class="col-md-6 text-right">
                            <small class="text-muted">
                                Cập nhật lần cuối: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Khởi tạo DataTable
            $('.table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                },
                "pageLength": 25,
                "columnDefs": [
                    { "orderable": false, "targets": 0 } // Cột STT không sắp xếp
                ]
            });
        });
    </script>
}
