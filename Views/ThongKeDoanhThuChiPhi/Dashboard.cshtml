@model BTL.Web.Models.DashboardThongKe
@{
    ViewData["Title"] = "Dashboard - Thống kê doanh thu và chi phí";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-tachometer-alt"></i> Dashboard - Thống kê hôm nay
                    </h3>
                </div>
                <div class="card-body">
                    @if (Model.ThongKeNgay != null)
                    {
                        <!-- Các chỉ số chính -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card text-white bg-success mb-3">
                                    <div class="card-body text-center">
                                        <i class="fas fa-money-bill-wave fa-2x mb-2"></i>
                                        <h5 class="card-title">Tổng doanh thu</h5>
                                        <h2>@Model.ThongKeNgay.TongDoanhThu.ToString("N0")</h2>
                                        <small>VNĐ</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card text-white bg-danger mb-3">
                                    <div class="card-body text-center">
                                        <i class="fas fa-credit-card fa-2x mb-2"></i>
                                        <h5 class="card-title">Tổng chi phí</h5>
                                        <h2>@Model.ThongKeNgay.TongChiPhi.ToString("N0")</h2>
                                        <small>VNĐ</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card text-white bg-info mb-3">
                                    <div class="card-body text-center">
                                        <i class="fas fa-chart-line fa-2x mb-2"></i>
                                        <h5 class="card-title">Lợi nhuận</h5>
                                        <h2>@Model.ThongKeNgay.LoiNhuan.ToString("N0")</h2>
                                        <small>VNĐ</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card text-white bg-warning mb-3">
                                    <div class="card-body text-center">
                                        <i class="fas fa-percentage fa-2x mb-2"></i>
                                        <h5 class="card-title">Tỷ lệ lợi nhuận</h5>
                                        <h2>@Model.ThongKeNgay.TyLeLoiNhuan.ToString("N1")%</h2>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Chi tiết chi phí -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fas fa-boxes"></i> Chi phí nguyên liệu
                                        </h5>
                                        <h3 class="text-danger">@Model.ThongKeNgay.TongChiPhiNguyenLieu.ToString("N0") VNĐ
                                        </h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fas fa-users"></i> Chi phí lương
                                        </h5>
                                        <h3 class="text-warning">@Model.ThongKeNgay.TongChiPhiLuong.ToString("N0") VNĐ</h3>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Thống kê đơn hàng -->
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <i class="fas fa-shopping-cart fa-2x text-primary mb-2"></i>
                                        <h5 class="card-title">Tổng đơn hàng</h5>
                                        <h3>@Model.ThongKeNgay.SoDonHang</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                                        <h5 class="card-title">Đơn hoàn thành</h5>
                                        <h3>@Model.ThongKeNgay.SoDonHoanThanh</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <i class="fas fa-user-friends fa-2x text-info mb-2"></i>
                                        <h5 class="card-title">Số khách</h5>
                                        <h3>@Model.ThongKeNgay.SoKhach</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Doanh thu theo loại món -->
                    @if (Model.DoanhThuTheoLoaiMon != null && Model.DoanhThuTheoLoaiMon.Any())
                    {
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title">
                                            <i class="fas fa-utensils"></i> Doanh thu theo loại món
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead class="table-dark">
                                                    <tr>
                                                        <th>Loại món</th>
                                                        <th>Số lượng món</th>
                                                        <th>Tổng số lượng</th>
                                                        <th>Doanh thu</th>
                                                        <th>Tỷ lệ %</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.DoanhThuTheoLoaiMon)
                                                    {
                                                        <tr>
                                                            <td><strong>@item.LoaiMon</strong></td>
                                                            <td>@item.SoLuongMon</td>
                                                            <td>@item.TongSoLuong</td>
                                                            <td>@item.DoanhThuTheoLoai.ToString("N0") VNĐ</td>
                                                            <td>
                                                                <span
                                                                    class="badge bg-primary">@item.TyLeDoanhThuPhanTram.ToString("N1")%</span>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Chi phí theo nguyên liệu -->
                    @if (Model.ChiPhiTheoNguyenLieu != null && Model.ChiPhiTheoNguyenLieu.Any())
                    {
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title">
                                            <i class="fas fa-boxes"></i> Chi phí theo nguyên liệu
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead class="table-dark">
                                                    <tr>
                                                        <th>Tên nguyên liệu</th>
                                                        <th>Đơn vị</th>
                                                        <th>Lượng sử dụng</th>
                                                        <th>Giá/đơn vị</th>
                                                        <th>Chi phí</th>
                                                        <th>Tỷ lệ %</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.ChiPhiTheoNguyenLieu)
                                                    {
                                                        <tr>
                                                            <td><strong>@item.TenNguyenLieu</strong></td>
                                                            <td>@item.DonVi</td>
                                                            <td>@item.TongLuongSuDung.ToString("N2")</td>
                                                            <td>@item.GiaDonVi.ToString("N0") VNĐ</td>
                                                            <td>@item.TongChiPhiNguyenLieu.ToString("N0") VNĐ</td>
                                                            <td>
                                                                <span
                                                                    class="badge bg-danger">@item.TyLeChiPhiPhanTram.ToString("N1")%</span>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
