@model IEnumerable<BTL.Web.Models.BuocXuLy>

@{
    ViewData["Title"] = "Danh sách bước xử lý";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div>
                        <a asp-controller="PhanCongBuocXuLy" asp-action="Index" class="btn btn-info">
                            <i class="fas fa-users-cog"></i> Quản lý phân công
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Thứ tự</th>
                                        <th>Tên bước</th>
                                        <th>Mô tả</th>
                                        <th>Thời gian dự kiến (phút)</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderBy(x => x.thu_tu))
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary fs-6">@item.thu_tu</span>
                                            </td>
                                            <td>
                                                <strong>@item.ten_buoc</strong>
                                            </td>
                                            <td>@(item.mo_ta ?? "Chưa có mô tả")</td>
                                            <td>
                                                @if (item.thoi_gian_du_kien.HasValue)
                                                {
                                                    <span class="badge bg-info">@item.thoi_gian_du_kien phút</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa xác định</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.buoc_id" class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-controller="PhanCongBuocXuLy" asp-action="GetByBuoc" asp-route-buocId="@item.buoc_id" class="btn btn-sm btn-warning">
                                                        <i class="fas fa-users"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-list-ol fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có bước xử lý nào</h5>
                            <p class="text-muted">Hệ thống chưa được cấu hình các bước xử lý.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
