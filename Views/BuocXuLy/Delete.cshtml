@model BTL.Web.Models.BuocXuLy

@{
    ViewData["Title"] = "Xóa bước xử lý";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa bước xử lý này không? Hành động này không thể hoàn tác.
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="mb-3">Thông tin bước xử lý sẽ bị xóa:</h5>
                            
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            <td class="fw-bold bg-light" style="width: 30%;">
                                                <i class="fas fa-tag me-1"></i>Tên bước:
                                            </td>
                                            <td>@Html.DisplayFor(model => model.ten_buoc)</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold bg-light">
                                                <i class="fas fa-sort-numeric-up me-1"></i>Thứ tự:
                                            </td>
                                            <td>
                                                <span class="badge bg-primary fs-6">@Html.DisplayFor(model => model.thu_tu)</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold bg-light">
                                                <i class="fas fa-clock me-1"></i>Thời gian dự kiến:
                                            </td>
                                            <td>
                                                @if (Model.thoi_gian_du_kien.HasValue)
                                                {
                                                            <span class="badge bg-info">@Html.DisplayFor(model => model.thoi_gian_du_kien) phút</span>
                                                }
                                                else
                                                {
                                                            <span class="text-muted">Chưa xác định</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold bg-light">
                                                <i class="fas fa-align-left me-1"></i>Mô tả:
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(Model.mo_ta))
                                                {
                                                            @Html.DisplayFor(model => model.mo_ta)
                                                }
                                                else
                                                {
                                                            <span class="text-muted">Chưa có mô tả</span>
                                                }
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-danger">
                                <div class="card-header bg-danger text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-info-circle me-1"></i>Lưu ý quan trọng
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <i class="fas fa-check text-danger me-1"></i>
                                            Tất cả phân công nhân viên cho bước này sẽ bị xóa
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-danger me-1"></i>
                                            Lịch sử thực hiện liên quan sẽ bị ảnh hưởng
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-danger me-1"></i>
                                            Hành động này không thể hoàn tác
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Hủy bỏ
                        </a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" asp-for="buoc_id" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa bước xử lý này không?')">
                                <i class="fas fa-trash"></i> Xác nhận xóa
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
