@model IEnumerable<BTL.Web.Models.BanAnWithLoaiBan>

@{
    ViewData["Title"] = "Bàn Có Sẵn";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-check-circle"></i> Bàn Có Sẵn
                        @if (ViewBag.Capacity != null)
                        {
                            <span class="badge badge-info">Sức chứa từ @ViewBag.Capacity người</span>
                        }
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Quay Lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <i class="icon fas fa-check"></i> @TempData["Message"]
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <i class="icon fas fa-ban"></i> @TempData["Error"]
                        </div>
                    }

                    <!-- Filter Form -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <form asp-action="GetAvailable" method="get" class="form-inline">
                                <div class="form-group mr-2">
                                    <label for="capacity" class="mr-2">Sức chứa tối thiểu:</label>
                                    <input type="number" id="capacity" name="capacity" class="form-control"
                                        value="@ViewBag.Capacity" min="1" placeholder="Tất cả">
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-filter"></i> Lọc
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Số Hiệu</th>
                                    <th>Loại Bàn</th>
                                    <th>Sức Chứa</th>
                                    <th>Trạng Thái</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ban_id</td>
                                        <td>
                                            <span class="badge badge-info">@item.so_hieu</span>
                                        </td>
                                        <td>
                                            <span class="badge badge-secondary">Loại @item.loai_ban_id</span>
                                        </td>
                                        <td>
                                            <span class="badge badge-success">@item.suc_chua người</span>
                                        </td>
                                        <td>
                                            <span class="badge badge-success">
                                                <i class="fas fa-check"></i> Có sẵn
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.ban_id"
                                                    class="btn btn-info btn-sm" title="Chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <button type="button" class="btn btn-success btn-sm"
                                                    onclick="selectTable(@item.ban_id, '@item.so_hieu')" title="Chọn bàn">
                                                    <i class="fas fa-check"></i> Chọn
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-times-circle fa-3x mb-3 text-warning"></i>
                            <p>Không có bàn nào có sẵn.</p>
                            @if (ViewBag.Capacity != null)
                            {
                                <p>Thử giảm yêu cầu sức chứa hoặc quay lại sau.</p>
                            }
                            <a asp-action="GetAvailable" class="btn btn-primary">
                                <i class="fas fa-refresh"></i> Xem Tất Cả Bàn
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for table selection -->
<div class="modal fade" id="tableSelectionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác Nhận Chọn Bàn</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có muốn chọn bàn <strong id="selectedTableNumber"></strong>?</p>
                <p class="text-muted">Bàn này sẽ được đánh dấu là đang sử dụng.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-success" id="confirmTableSelection">
                    <i class="fas fa-check"></i> Xác Nhận
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var selectedTableId = null;

        $(document).ready(function () {
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Initialize DataTable
            $('.table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                },
                "responsive": true,
                "autoWidth": false,
                "order": [[0, "asc"]]
            });
        });

        function selectTable(tableId, tableNumber) {
            selectedTableId = tableId;
            $('#selectedTableNumber').text(tableNumber);
            $('#tableSelectionModal').modal('show');
        }

        $('#confirmTableSelection').click(function () {
            if (selectedTableId) {
                // Here you can redirect to order creation page or perform other actions
                // For now, we'll just show a success message
                $('#tableSelectionModal').modal('hide');

                // You can redirect to order creation with the selected table
                // window.location.href = '/Order/Create?tableId=' + selectedTableId;

                // Or show a success message
                alert('Đã chọn bàn thành công! Bàn ID: ' + selectedTableId);
            }
        });
    </script>
}
