@model BTL.Web.Models.BanAn

@{
    ViewData["Title"] = "Thêm Bàn Mới";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-plus"></i> Thêm Bàn Mới
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Quay Lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (ViewBag.LoaiBans != null && ViewBag.BanCounts != null)
                    {
                        <div class="alert alert-info mb-3">
                            <h6><i class="fas fa-info-circle"></i> Tình Trạng Các Loại Bàn:</h6>
                            <div class="row">
                                @foreach (var loaiBan in ViewBag.LoaiBans)
                                {
                                    var banCount = ViewBag.BanCounts[loaiBan.loai_ban_id];
                                    var remainingCount = loaiBan.so_luong - banCount;
                                    var statusClass = remainingCount > 0 ? "text-success" : "text-danger";
                                    var statusIcon = remainingCount > 0 ? "fas fa-check-circle" : "fas fa-times-circle";
                                    
                                    <div class="col-md-6 mb-2">
                                        <small>
                                            <i class="@statusIcon text-@(remainingCount > 0 ? "success" : "danger")"></i>
                                            <strong>Loại @loaiBan.loai_ban_id:</strong> 
                                            @banCount/@loaiBan.so_luong bàn đã tạo
                                            <span class="@statusClass">(@(remainingCount > 0 ? $"Còn {remainingCount} bàn" : "Đã đủ"))</span>
                                        </small>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="loai_ban_id" class="control-label">Loại Bàn</label>
                            <select asp-for="loai_ban_id" class="form-control" required>
                                <option value="">-- Chọn Loại Bàn --</option>
                                @if (ViewBag.LoaiBans != null)
                                {
                                    foreach (var loaiBan in ViewBag.LoaiBans)
                                    {
                                        var banCount = ViewBag.BanCounts != null ? ViewBag.BanCounts[loaiBan.loai_ban_id] : 0;
                                        var remainingCount = loaiBan.so_luong - banCount;
                                        var statusText = remainingCount > 0 ? $"Còn lại: {remainingCount} bàn" : "Đã đủ số lượng";
                                        
                                        @if (remainingCount > 0)
                                        {
                                            <option value="@loaiBan.loai_ban_id">
                                                Loại @loaiBan.loai_ban_id - @loaiBan.suc_chua người (Tổng: @loaiBan.so_luong, Đã tạo: @banCount, Còn lại: @remainingCount bàn)
                                            </option>
                                        }
                                        else
                                        {
                                            <option value="@loaiBan.loai_ban_id" disabled>
                                                Loại @loaiBan.loai_ban_id - @loaiBan.suc_chua người (Tổng: @loaiBan.so_luong, Đã tạo: @banCount, Đã đủ số lượng)
                                            </option>
                                        }
                                    }
                                }
                            </select>
                            <small class="form-text text-muted" id="remaining-info">
                                <i class="fas fa-info-circle"></i> Vui lòng chọn loại bàn để xem thông tin chi tiết.
                            </small>
                            <span asp-validation-for="loai_ban_id" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="so_hieu" class="control-label">Số Hiệu Bàn</label>
                            <input asp-for="so_hieu" class="form-control" placeholder="VD: A1, B2, C3..." maxlength="10" required />
                            <small class="form-text text-muted">Số hiệu bàn phải là duy nhất và không được trùng lặp.</small>
                            <span asp-validation-for="so_hieu" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Tạo Bàn
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            // Auto-focus on so_hieu field
            $('#so_hieu').focus();
            
            // Update remaining count info when loai_ban_id changes
            $('#loai_ban_id').on('change', function() {
                var selectedOption = $(this).find('option:selected');
                var optionText = selectedOption.text();
                
                // Extract remaining count from option text
                if (optionText.includes('Còn lại:')) {
                    var match = optionText.match(/Còn lại: (\d+) bàn/);
                    if (match) {
                        var remainingCount = parseInt(match[1]);
                        if (remainingCount > 0) {
                            $('#remaining-info').html('<i class="fas fa-info-circle text-info"></i> Còn <strong>' + remainingCount + '</strong> bàn có thể thêm cho loại bàn này.');
                        } else {
                            $('#remaining-info').html('<i class="fas fa-exclamation-triangle text-warning"></i> Loại bàn này đã đủ số lượng.');
                        }
                    }
                } else if (optionText.includes('Đã đủ số lượng')) {
                    $('#remaining-info').html('<i class="fas fa-exclamation-triangle text-warning"></i> Loại bàn này đã đủ số lượng.');
                } else {
                    $('#remaining-info').html('<i class="fas fa-info-circle"></i> Vui lòng chọn loại bàn để xem thông tin chi tiết.');
                }
            });
            
            // Real-time validation for so_hieu
            $('#so_hieu').on('input', function() {
                var value = $(this).val();
                if (value.length > 0) {
                    $(this).removeClass('is-invalid').addClass('is-valid');
                } else {
                    $(this).removeClass('is-valid').addClass('is-invalid');
                }
            });
            
            // Form validation
            $('form').on('submit', function(e) {
                var isValid = true;
                
                // Check loai_ban_id
                if (!$('#loai_ban_id').val()) {
                    $('#loai_ban_id').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#loai_ban_id').removeClass('is-invalid').addClass('is-valid');
                }
                
                // Check so_hieu
                if (!$('#so_hieu').val().trim()) {
                    $('#so_hieu').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#so_hieu').removeClass('is-invalid').addClass('is-valid');
                }
                
                if (!isValid) {
                    e.preventDefault();
                    $('html, body').animate({
                        scrollTop: $('.is-invalid:first').offset().top - 100
                    }, 500);
                }
            });
        });
    </script>
}
