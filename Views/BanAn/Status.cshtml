@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Trạng thái bàn ăn";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-info-circle"></i> Trạng thái bàn ăn
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Message"] != null)
                    {
                                            <div class="alert alert-success alert-dismissible fade show">
                                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                <i class="bi bi-check-circle-fill"></i> @TempData["Message"]
                                            </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                                            <div class="alert alert-danger alert-dismissible fade show">
                                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
                                            </div>
                    }

                    @if (Model.Any())
                    {
                                <div class="row">
                                    @foreach (var item in Model)
                                    {
                                                <div class="col-md-6 col-lg-4 mb-4">
                                                    <div class="card border-primary">
                                                        <div class="card-header bg-primary text-white">
                                                            <h5 class="card-title mb-0">
                                                                <i class="bi bi-table"></i> Loại bàn @item.loai_ban_id
                                                            </h5>
                                                        </div>
                                                        <div class="card-body">
                                                            <div class="row text-center mb-3">
                                                                <div class="col-4">
                                                                    <h4 class="text-primary mb-0">@item.so_ban_hien_co</h4>
                                                                    <small class="text-muted">Tổng bàn</small>
                                                                </div>
                                                                <div class="col-4">
                                                                    <h4 class="text-success mb-0">@item.so_ban_trong</h4>
                                                                    <small class="text-muted">Bàn trống</small>
                                                                </div>
                                                                <div class="col-4">
                                                                    <h4 class="text-warning mb-0">@item.so_ban_dang_su_dung</h4>
                                                                    <small class="text-muted">Đang dùng</small>
                                                                </div>
                                                            </div>
                                            
                                                            <div class="row text-center">
                                                                <div class="col-12">
                                                                    <span class="badge bg-info">@item.suc_chua người/bàn</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                    }
                                </div>

                                <!-- Summary Cards -->
                                <div class="row mt-4">
                                    <div class="col-md-3">
                                        <div class="card bg-primary text-white">
                                            <div class="card-body text-center">
                                                <i class="bi bi-layers-fill fs-1 mb-2"></i>
                                                <h5 class="card-title">Tổng Loại Bàn</h5>
                                                <h3 class="mb-0">@Model.Count()</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-success text-white">
                                            <div class="card-body text-center">
                                                <i class="bi bi-table fs-1 mb-2"></i>
                                                <h5 class="card-title">Tổng Số Bàn</h5>
                                                <h3 class="mb-0">@Model.Sum(x => (int)x.so_ban_hien_co)</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-info text-white">
                                            <div class="card-body text-center">
                                                <i class="bi bi-check-circle-fill fs-1 mb-2"></i>
                                                <h5 class="card-title">Bàn Trống</h5>
                                                <h3 class="mb-0">@Model.Sum(x => (int)x.so_ban_trong)</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-warning text-white">
                                            <div class="card-body text-center">
                                                <i class="bi bi-clock-fill fs-1 mb-2"></i>
                                                <h5 class="card-title">Đang Sử Dụng</h5>
                                                <h3 class="mb-0">@Model.Sum(x => (int)x.so_ban_dang_su_dung)</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                    }
                    else
                    {
                                            <div class="text-center text-muted py-5">
                                                <div class="mb-4">
                                                    <i class="bi bi-table fs-1 text-muted"></i>
                                                </div>
                                                <h4 class="text-muted mb-3">Chưa có bàn nào được tạo</h4>
                                                <p class="text-muted mb-4">Bắt đầu bằng cách tạo bàn đầu tiên cho nhà hàng của bạn</p>
                                                <a asp-action="Create" class="btn btn-primary btn-lg">
                                                    <i class="bi bi-plus-circle"></i> Tạo Bàn Đầu Tiên
                                                </a>
                                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
                        <script>
                            $(document).ready(function () {
                                // Auto-hide alerts after 5 seconds
                                setTimeout(function () {
                                    $('.alert').fadeOut('slow');
                                }, 5000);

                                // Add hover effects to table rows
                                $('.table tbody tr').hover(
                                    function() {
                                        $(this).addClass('table-active');
                                    },
                                    function() {
                                        $(this).removeClass('table-active');
                                    }
                                );

                                // Initialize tooltips
                                var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
                                var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                                    return new bootstrap.Tooltip(tooltipTriggerEl);
                                });
                            });
                        </script>
}
