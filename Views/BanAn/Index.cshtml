@model IEnumerable<BTL.Web.Models.BanAnWithLoaiBan>

@{
    ViewData["Title"] = "Quản lý Bàn Ăn";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-table"></i> Quản lý Bàn Ăn
                    </h3>
                    <div class="card-tools">
                        @* <a asp-action="Layout" class="btn btn-success btn-sm me-2">
                            <i class="bi bi-grid-3x3-gap"></i> Layout Nhà Hàng
                        </a> *@
                        <a asp-action="Create" class="btn btn-light btn-sm">
                            <i class="bi bi-plus-circle"></i> Thêm Bàn Mới
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Search Form -->
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <form asp-action="Search" method="get" class="d-flex gap-2">
                                <input type="text" name="searchTerm" class="form-control" 
                                       placeholder="Tìm kiếm theo số hiệu bàn..." 
                                       value="@ViewBag.SearchTerm">
                                <select name="loaiBanId" class="form-select" style="width: auto;">
                                    <option value="">Tất cả loại bàn</option>
                                    @if (ViewBag.LoaiBans != null)
                                    {
                                        @foreach (var loaiBan in ViewBag.LoaiBans as List<BTL.Web.Models.LoaiBan>)
                                        {
                                            <option value="@loaiBan.loai_ban_id" selected="@(ViewBag.LoaiBanId?.ToString() == loaiBan.loai_ban_id.ToString())">
                                                Loại @loaiBan.loai_ban_id (@loaiBan.suc_chua người)
                                            </option>
                                        }
                                    }
                                </select>
                                <input type="number" name="capacity" class="form-control" style="width: 120px;" 
                                       placeholder="Sức chứa" value="@ViewBag.Capacity">
                                <button type="submit" class="btn btn-outline-primary">
                                    <i class="bi bi-search"></i>
                                </button>
                            </form>
                        </div>
                        <div class="col-md-4 text-end">
                            <a asp-action="Status" class="btn btn-info me-2">
                                <i class="bi bi-info-circle"></i> Trạng thái bàn
                            </a>
                            <a asp-action="GetAvailable" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Bàn trống
                            </a>
                        </div>
                    </div>

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            <i class="bi bi-check-circle-fill"></i> @TempData["Message"]
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
                        </div>
                    }

                    @{
                        var groupedTables = Model.GroupBy(x => x.loai_ban_id).OrderBy(g => g.Key);
                    }

                    @if (groupedTables.Any())
                    {
                        <div class="accordion" id="banAnAccordion">
                            @foreach (var group in groupedTables)
                            {
                                var groupId = $"collapse-{group.Key}";
                                var headingId = $"heading-{group.Key}";
                                var tableCount = group.Count();
                                var totalCapacity = group.Sum(x => x.suc_chua);
                                
                                <div class="accordion-item border-0 mb-3 shadow-sm">
                                    <h2 class="accordion-header" id="@headingId">
                                        <button class="accordion-button @(group.Key == groupedTables.First().Key ? "" : "collapsed") bg-light" 
                                                type="button" 
                                                data-bs-toggle="collapse" 
                                                data-bs-target="#@groupId" 
                                                aria-expanded="@(group.Key == groupedTables.First().Key ? "true" : "false")" 
                                                aria-controls="@groupId">
                                            <div class="d-flex justify-content-between align-items-center w-100 me-3">
                                                <div class="d-flex align-items-center">
                                                    <span class="badge bg-primary me-3 fs-6">Loại @group.Key</span>
                                                    <div class="d-flex flex-column">
                                                        <span class="fw-bold text-dark">@tableCount bàn</span>
                                                        <small class="text-muted">Tổng sức chứa: @totalCapacity người</small>
                                                    </div>
                                                </div>
                                                <div class="d-flex align-items-center">
                                                    <span class="badge bg-success me-2">
                                                        <i class="bi bi-people-fill"></i> @totalCapacity
                                                    </span>
                                                    <span class="badge bg-info">
                                                        <i class="bi bi-table"></i> @tableCount
                                                    </span>
                                                </div>
                                            </div>
                                        </button>
                                    </h2>
                                    <div id="@groupId" 
                                         class="accordion-collapse collapse @(group.Key == groupedTables.First().Key ? "show" : "")" 
                                         aria-labelledby="@headingId" 
                                         data-bs-parent="#banAnAccordion">
                                        <div class="accordion-body p-0">
                                            <div class="table-responsive">
                                                <table class="table table-hover mb-0">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th class="text-center" style="width: 80px;">ID</th>
                                                            <th style="width: 150px;">Số Hiệu</th>
                                                            <th style="width: 120px;">Sức Chứa</th>
                                                            <th style="width: 200px;">Thao Tác</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in group.OrderBy(x => x.ban_id))
                                                        {
                                                            <tr class="align-middle">
                                                                <td class="text-center">
                                                                    <span class="badge bg-secondary">@item.ban_id</span>
                                                                </td>
                                                                <td>
                                                                    <div class="d-flex align-items-center">
                                                                        <i class="bi bi-door-open text-primary me-2"></i>
                                                                        <span class="fw-medium">@item.so_hieu</span>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="d-flex align-items-center">
                                                                        <span class="badge bg-success me-2">
                                                                            <i class="bi bi-people-fill"></i> @item.suc_chua
                                                                        </span>
                                                                        <small class="text-muted">người</small>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="d-flex gap-2" role="group">
                                                                        <a asp-action="Details" asp-route-id="@item.ban_id"
                                                                            class="btn btn-info btn-sm px-3" title="Xem chi tiết">
                                                                            <i class="bi bi-eye-fill me-1"></i>
                                                                            Xem
                                                                        </a>
                                                                        <a asp-action="Edit" asp-route-id="@item.ban_id"
                                                                            class="btn btn-warning btn-sm px-3" title="Chỉnh sửa">
                                                                            <i class="bi bi-pencil-fill me-1"></i>
                                                                            Sửa
                                                                        </a>
                                                                        <a asp-action="Delete" asp-route-id="@item.ban_id"
                                                                            class="btn btn-danger btn-sm px-3" title="Xóa bàn">
                                                                            <i class="bi bi-trash-fill me-1"></i>
                                                                            Xóa
                                                                        </a>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Summary Cards -->
                        <div class="row mt-4">
                            <div class="col-md-3">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <i class="bi bi-layers-fill fs-1 mb-2"></i>
                                        <h5 class="card-title">Tổng Loại Bàn</h5>
                                        <h3 class="mb-0">@groupedTables.Count()</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <i class="bi bi-table fs-1 mb-2"></i>
                                        <h5 class="card-title">Tổng Số Bàn</h5>
                                        <h3 class="mb-0">@Model.Count()</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <i class="bi bi-people-fill fs-1 mb-2"></i>
                                        <h5 class="card-title">Tổng Sức Chứa</h5>
                                        <h3 class="mb-0">@Model.Sum(x => x.suc_chua)</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body text-center">
                                        <i class="bi bi-calculator-fill fs-1 mb-2"></i>
                                        <h5 class="card-title">Trung Bình/Bàn</h5>
                                        <h3 class="mb-0">@(Model.Any() ? Math.Round((double)Model.Sum(x => x.suc_chua) / Model.Count(), 1) : 0)</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <div class="mb-4">
                                <i class="bi bi-table fs-1 text-muted"></i>
                            </div>
                            <h4 class="text-muted mb-3">Chưa có bàn nào được tạo</h4>
                            <p class="text-muted mb-4">Bắt đầu bằng cách tạo bàn đầu tiên cho nhà hàng của bạn</p>
                            <a asp-action="Create" class="btn btn-primary btn-lg">
                                <i class="bi bi-plus-circle"></i> Tạo Bàn Đầu Tiên
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Add smooth animation to accordion
            $('.accordion-button').on('click', function() {
                $(this).find('.accordion-button').toggleClass('collapsed');
            });

            // Add hover effects to table rows
            $('.table tbody tr').hover(
                function() {
                    $(this).addClass('table-active');
                },
                function() {
                    $(this).removeClass('table-active');
                }
            );

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}
