@model BTL.Web.Models.ThongKeNguyenLieuSearchModel
@{
    ViewData["Title"] = "Thống kê nguyên liệu sử dụng";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-chart-bar"></i> Thống kê nguyên liệu sử dụng
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Form tìm kiếm -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <form asp-action="Index" method="post" class="form-inline">
                                <div class="form-group me-3">
                                    <label class="form-label me-2">Từ ngày:</label>
                                    <input asp-for="TuNgay" type="date" class="form-control" />
                                </div>

                                <div class="form-group me-3">
                                    <label class="form-label me-2">Đến ngày:</label>
                                    <input asp-for="DenNgay" type="date" class="form-control" />
                                </div>

                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Thống kê
                                </button>
                            </form>
                        </div>
                    </div>

                    @{
                        var nguyenLieuTheoNgay = ViewBag.NguyenLieuTheoNgay as
                        List<BTL.Web.Models.ThongKeNguyenLieuTheoNgayMoi>;
                        var tuNgay = ViewBag.TuNgay as DateTime?;
                        var denNgay = ViewBag.DenNgay as DateTime?;
                        var storedProcedure = ViewBag.StoredProcedure as string;
                        var storedProcedureDescription = ViewBag.StoredProcedureDescription as string;
                        var executionTime = ViewBag.ExecutionTime as string;
                        var successMessage = ViewBag.SuccessMessage as string;
                        var errorMessage = ViewBag.ErrorMessage as string;
                    }

                    <!-- Hiển thị thông báo thành công -->
                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i>
                            <strong>Thành công!</strong> @successMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Hiển thị thông báo lỗi -->
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Lỗi!</strong> @errorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (nguyenLieuTheoNgay != null && nguyenLieuTheoNgay.Any())
                    {
                        <!-- Thông tin stored procedure được sử dụng -->
                        @if (!string.IsNullOrEmpty(storedProcedure))
                        {
                            <div class="row mb-3">
                                <div class="col-12">
                                    <div class="card border-info">
                                        <div class="card-header bg-info text-white">
                                            <h5 class="card-title mb-0">
                                                <i class="fas fa-database"></i> Thông tin Stored Procedure
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <strong>Tên Stored Procedure:</strong><br>
                                                    <code class="text-primary">@storedProcedure</code>
                                                </div>
                                                <div class="col-md-6">
                                                    <strong>Thời gian thực thi:</strong><br>
                                                    <span class="text-success">@executionTime</span>
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrEmpty(storedProcedureDescription))
                                            {
                                                <div class="row mt-2">
                                                    <div class="col-12">
                                                        <strong>Mô tả:</strong><br>
                                                        <span class="text-muted">@storedProcedureDescription</span>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Thông tin khoảng thời gian -->
                        @if (tuNgay.HasValue && denNgay.HasValue)
                        {
                            <div class="row mb-4">
                                <div class="col-12">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h5 class="card-title">Thống kê từ @tuNgay.Value.ToString("dd/MM/yyyy") đến
                                                @denNgay.Value.ToString("dd/MM/yyyy")</h5>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <strong>Số loại nguyên liệu:</strong> @nguyenLieuTheoNgay.Count
                                                </div>
                                                <div class="col-md-4">
                                                    <strong>Tổng lượng sử dụng:</strong> @nguyenLieuTheoNgay.Sum(x =>
                                                    x.tong_luong).ToString("N2")
                                            </div>
                                            <div class="col-md-4">
                                                <strong>Tổng chi phí:</strong> @nguyenLieuTheoNgay.Sum(x =>
                                                                                        x.tong_gia_tri).ToString("N0") VNĐ
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                                        }

                        <!-- Thống kê nguyên liệu theo ngày (sử dụng stored procedure mới) -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title">
                                            <i class="fas fa-leaf"></i> Thống kê nguyên liệu theo ngày
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead class="table-dark">
                                                    <tr>
                                                        <th>Mã nguyên liệu</th>
                                                        <th>Tên nguyên liệu</th>
                                                        <th>Đơn vị tính</th>
                                                        <th>Tổng lượng</th>
                                                        <th>Tổng giá trị</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in nguyenLieuTheoNgay)
                                                    {
                                                        <tr>
                                                            <td><strong>@item.nl_id</strong></td>
                                                            <td>@item.ten_nguyen_lieu</td>
                                                            <td>@item.don_vi</td>
                                                            <td>@item.tong_luong.ToString("N2")</td>
                                                            <td>@item.tong_gia_tri.ToString("N0") VNĐ</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>