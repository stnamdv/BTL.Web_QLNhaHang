@model PagedResult<BTL.Web.Models.NhaCungCap>

@{
    ViewData["Title"] = "Danh sách nhà cung cấp";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm mới
                        </a>
                        <a asp-action="Stats" class="btn btn-info">
                            <i class="fas fa-chart-bar"></i> Thống kê
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Search Form -->
                    <form method="get" class="mb-3">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="text" name="search" class="form-control" placeholder="Tìm kiếm theo tên hoặc địa chỉ..." value="@ViewBag.SearchTerm">
                                    <button type="submit" class="btn btn-outline-secondary">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>

                    @if (Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Tên nhà cung cấp</th>
                                        <th>Địa chỉ</th>
                                        <th>Số điện thoại</th>
                                        <th>Số nguyên liệu</th>
                                        <th>Số lần cung cấp</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.ten</strong>
                                            </td>
                                            <td>@(item.dia_chi ?? "Chưa cập nhật")</td>
                                            <td>@(item.sdt ?? "Chưa cập nhật")</td>
                                            <td>
                                                <span class="badge bg-primary">@(item.GetType().GetProperty("so_nguyen_lieu_cung_cap")?.GetValue(item) ?? 0)</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">@(item.GetType().GetProperty("so_lan_cung_cap")?.GetValue(item) ?? 0)</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.ncc_id" class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.ncc_id" class="btn btn-sm btn-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.ncc_id" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @await Html.PartialAsync("_Pagination", Model)
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-building fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có nhà cung cấp nào</h5>
                            <p class="text-muted">Hãy thêm nhà cung cấp đầu tiên để bắt đầu quản lý.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Thêm nhà cung cấp
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
