@model BTL.Web.Models.NhaCungCap

@{
    ViewData["Title"] = "Thêm nhà cung cấp mới";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" id="createForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-building"></i> Thông tin nhà cung cấp
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label asp-for="ten" class="form-label">Tên nhà cung cấp <span class="text-danger">*</span></label>
                                            <input asp-for="ten" class="form-control" required />
                                            <span asp-validation-for="ten" class="text-danger"></span>
                                            <div class="form-text">Tên nhà cung cấp phải rõ ràng và không trùng lặp</div>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="dia_chi" class="form-label">Địa chỉ</label>
                                            <textarea asp-for="dia_chi" class="form-control" rows="3" 
                                                      placeholder="Nhập địa chỉ chi tiết..."></textarea>
                                            <span asp-validation-for="dia_chi" class="text-danger"></span>
                                            <div class="form-text">Địa chỉ chi tiết để liên hệ và giao hàng</div>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="sdt" class="form-label">Số điện thoại</label>
                                            <input asp-for="sdt" class="form-control" 
                                                   placeholder="Ví dụ: 0123456789 hoặc +84-123-456-789" />
                                            <span asp-validation-for="sdt" class="text-danger"></span>
                                            <div class="form-text">Số điện thoại liên hệ (tối thiểu 8 ký tự)</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card border-info">
                                    <div class="card-header bg-info text-white">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-lightbulb"></i> Hướng dẫn
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <h6 class="text-primary">Tên nhà cung cấp:</h6>
                                        <ul class="small">
                                            <li>Phải rõ ràng, dễ hiểu</li>
                                            <li>Không được trùng lặp</li>
                                            <li>Tối đa 160 ký tự</li>
                                        </ul>

                                        <h6 class="text-primary">Địa chỉ:</h6>
                                        <ul class="small">
                                            <li>Địa chỉ chi tiết để giao hàng</li>
                                            <li>Bao gồm số nhà, đường, phường/xã</li>
                                            <li>Có thể để trống</li>
                                        </ul>

                                        <h6 class="text-primary">Số điện thoại:</h6>
                                        <ul class="small">
                                            <li>Chỉ chứa số, dấu +, dấu -</li>
                                            <li>Tối thiểu 8 ký tự</li>
                                            <li>Có thể để trống</li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="card border-warning mt-3">
                                    <div class="card-header bg-warning text-dark">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-exclamation-triangle"></i> Lưu ý quan trọng
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="small mb-0">
                                            Thông tin nhà cung cấp sẽ được sử dụng để quản lý việc cung cấp nguyên liệu 
                                            và theo dõi lịch sử giao dịch.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary me-2">
                                        <i class="fas fa-save"></i> Lưu
                                    </button>
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-times"></i> Hủy
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
            <script>
                $(document).ready(function() {
                    // Validate form trước khi submit
                    $('#createForm').submit(function(e) {
                        const ten = $('#ten').val().trim();
                
                        if (!ten) {
                            e.preventDefault();
                            alert('Vui lòng nhập tên nhà cung cấp');
                            return false;
                        }
                    });
                });
            </script>
}
