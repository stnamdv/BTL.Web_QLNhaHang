@model IEnumerable<BTL.Web.Models.Mon>

@{
    ViewData["Title"] = "Danh sách món ăn";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm món ăn
                        </a>
                        <a asp-action="Stats" class="btn btn-info">
                            <i class="fas fa-chart-bar"></i> Thống kê
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Search and Filter Form -->
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <form asp-action="Index" method="get" class="d-flex">
                                <input type="text" name="searchTerm" class="form-control me-2" 
                                       placeholder="Tìm kiếm theo tên hoặc mã món..." 
                                       value="@ViewBag.SearchTerm">
                                <select name="loaiMon" class="form-select me-2" style="width: auto;">
                                    <option value="">Tất cả loại món</option>
                                    @foreach (var option in ViewBag.LoaiMonOptions as List<SelectListItem>)
                                    {
                                        <option value="@option.Value" selected="@(option.Value == ViewBag.LoaiMon)">@option.Text</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-outline-primary">
                                    <i class="fas fa-search"></i>
                                </button>
                            </form>
                        </div>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Mã món</th>
                                        <th>Tên món</th>
                                        <th>Loại món</th>
                                        <th>Giá</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">@item.ma_mon</span>
                                            </td>
                                            <td>@item.ten_mon</td>
                                            <td>
                                                @{
                                                    var loaiMonText = item.loai_mon switch
                                                    {
                                                        BTL.Web.Models.LoaiMon.KHAI_VI => "Khai vị",
                                                        BTL.Web.Models.LoaiMon.MON_CHINH => "Món chính",
                                                        BTL.Web.Models.LoaiMon.TRANG_MIENG => "Tráng miệng",
                                                        _ => item.loai_mon.ToString()
                                                    };
                                                }
                                                <span class="badge bg-info">@loaiMonText</span>
                                            </td>
                                            <td>
                                                <strong class="text-success">@item.gia.ToString("N0") ₫</strong>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.mon_id" 
                                                       class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.mon_id" 
                                                       class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.mon_id" 
                                                       class="btn btn-sm btn-outline-danger" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (ViewBag.TotalPages > 1)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    @if (ViewBag.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-page="@(ViewBag.CurrentPage - 1)" 
                                               asp-route-pageSize="@ViewBag.PageSize"
                                               asp-route-searchTerm="@ViewBag.SearchTerm"
                                               asp-route-loaiMon="@ViewBag.LoaiMon">Trước</a>
                                        </li>
                                    }

                                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-page="@i" 
                                               asp-route-pageSize="@ViewBag.PageSize"
                                               asp-route-searchTerm="@ViewBag.SearchTerm"
                                               asp-route-loaiMon="@ViewBag.LoaiMon">@i</a>
                                        </li>
                                    }

                                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-page="@(ViewBag.CurrentPage + 1)" 
                                               asp-route-pageSize="@ViewBag.PageSize"
                                               asp-route-searchTerm="@ViewBag.SearchTerm"
                                               asp-route-loaiMon="@ViewBag.LoaiMon">Sau</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }

                        <div class="text-muted text-center">
                            Hiển thị @Model.Count() trong tổng số @ViewBag.TotalItems món ăn
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Không có món ăn nào</h5>
                            <p class="text-muted">Hãy thêm món ăn đầu tiên của bạn!</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Thêm món ăn
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
