@model BTL.Web.Models.MonWithCongThuc

@{
    ViewData["Title"] = "Chi tiết món ăn";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Mon.mon_id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <!-- Thông tin cơ bản -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-info-circle"></i> Thông tin cơ bản
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">Mã món:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-secondary fs-6">@Model.Mon.ma_mon</span>
                                        </dd>

                                        <dt class="col-sm-4">Tên món:</dt>
                                        <dd class="col-sm-8">
                                            <strong>@Model.Mon.ten_mon</strong>
                                        </dd>

                                        <dt class="col-sm-4">Loại món:</dt>
                                        <dd class="col-sm-8">
                                            @{
                                                var loaiMonText = Model.Mon.loai_mon switch
                                                {
                                                    BTL.Web.Models.LoaiMon.KHAI_VI => "Khai vị",
                                                    BTL.Web.Models.LoaiMon.MON_CHINH => "Món chính",
                                                    BTL.Web.Models.LoaiMon.TRANG_MIENG => "Tráng miệng",
                                                    _ => Model.Mon.loai_mon.ToString()
                                                };
                                            }
                                            <span class="badge bg-info fs-6">@loaiMonText</span>
                                        </dd>

                                        <dt class="col-sm-4">Giá:</dt>
                                        <dd class="col-sm-8">
                                            <strong class="text-success fs-5">@Model.Mon.gia.ToString("N0") ₫</strong>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Công thức -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-list"></i> Công thức (@Model.CongThucs.Count() nguyên liệu)
                                    </h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.CongThucs.Any())
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-sm">
                                                <thead>
                                                    <tr>
                                                        <th>Nguyên liệu</th>
                                                        <th>Định lượng</th>
                                                        <th>Đơn vị</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var congThuc in Model.CongThucs)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <strong>@congThuc.ten_nguyen_lieu</strong>
                                                                <br>
                                                                <small class="text-muted">@congThuc.nguon_goc</small>
                                                            </td>
                                                            <td>
                                                                <span class="badge bg-primary">@congThuc.dinh_luong.ToString("N3")</span>
                                                            </td>
                                                            <td>@congThuc.don_vi</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>

                                        <!-- Tổng giá trị nguyên liệu -->
                                        <div class="alert alert-info mt-3">
                                            <strong>Tổng giá trị nguyên liệu:</strong> 
                                            <span class="text-success">@Model.CongThucs.Sum(ct => ct.dinh_luong * ct.gia_nguyen_lieu).ToString("N0") ₫</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center py-3">
                                            <i class="fas fa-exclamation-triangle fa-2x text-warning mb-2"></i>
                                            <p class="text-muted">Chưa có công thức cho món này</p>
                                            <a asp-action="Edit" asp-route-id="@Model.Mon.mon_id" class="btn btn-sm btn-primary">
                                                <i class="fas fa-plus"></i> Thêm công thức
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Thông tin bổ sung -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-chart-line"></i> Thông tin bổ sung
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="text-center">
                                                <h6 class="text-muted">Số nguyên liệu</h6>
                                                <h4 class="text-primary">@Model.CongThucs.Count()</h4>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="text-center">
                                                <h6 class="text-muted">Giá bán</h6>
                                                <h4 class="text-success">@Model.Mon.gia.ToString("N0") ₫</h4>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="text-center">
                                                <h6 class="text-muted">Lợi nhuận ước tính</h6>
                                                @{
                                                    var totalCost = Model.CongThucs.Sum(ct => ct.dinh_luong * ct.gia_nguyen_lieu);
                                                    var profit = Model.Mon.gia - totalCost;
                                                    var profitClass = profit >= 0 ? "text-success" : "text-danger";
                                                }
                                                <h4 class="@profitClass">@profit.ToString("N0") ₫</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
