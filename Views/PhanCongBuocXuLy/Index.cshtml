@model IEnumerable<BTL.Web.Models.BuocXuLyWithPhanCong>

@{
    ViewData["Title"] = "Quản lý phân công nhân viên";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm phân công
                        </a>
                        <a asp-controller="BuocXuLy" asp-action="Index" class="btn btn-info">
                            <i class="fas fa-list-ol"></i> Xem bước xử lý
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Bước xử lý</th>
                                        <th>Thứ tự</th>
                                        <th>Loại nhân viên</th>
                                        <th>Vai trò</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày tạo</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderBy(x => x.thu_tu).ThenBy(x => x.loai_nv))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.ten_buoc</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@item.thu_tu</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@item.loai_nv</span>
                                            </td>
                                            <td>@(item.vai_tro ?? "Chưa xác định")</td>
                                            <td>
                                                @if (item.trang_thai == "ACTIVE")
                                                {
                                                    <span class="badge bg-success">Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Không hoạt động</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">@item.thoi_diem_tao.ToString("dd/MM/yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@item.phan_cong_buoc_id" class="btn btn-sm btn-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.phan_cong_buoc_id" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users-cog fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có phân công nào</h5>
                            <p class="text-muted">Hãy tạo phân công nhân viên cho các bước xử lý.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Thêm phân công
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
