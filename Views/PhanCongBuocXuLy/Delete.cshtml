@model BTL.Web.Models.BuocXuLyWithPhanCong

@{
    ViewData["Title"] = "Xóa phân công nhân viên";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa phân công này không? 
                        Hành động này không thể hoàn tác.
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Bước xử lý:</dt>
                                <dd class="col-sm-8">
                                    <strong>@Model.ten_buoc</strong>
                                    <span class="badge bg-primary ms-2">Bước @Model.thu_tu</span>
                                </dd>

                                <dt class="col-sm-4">Loại nhân viên:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.loai_nv</span>
                                </dd>

                                <dt class="col-sm-4">Vai trò:</dt>
                                <dd class="col-sm-8">
                                    @(Model.vai_tro ?? "Chưa xác định")
                                </dd>

                                <dt class="col-sm-4">Trạng thái:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.trang_thai == "ACTIVE")
                                    {
                                                <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                                <span class="badge bg-secondary">Không hoạt động</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Ngày tạo:</dt>
                                <dd class="col-sm-8">
                                    <small class="text-muted">@Model.thoi_diem_tao.ToString("dd/MM/yyyy HH:mm")</small>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-info-circle"></i> Thông tin
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                        <small class="text-muted">
                                            Phân công này sẽ bị xóa vĩnh viễn khỏi hệ thống.
                                            Nếu đã có lịch sử thực hiện liên quan, việc xóa có thể bị từ chối.
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input asp-for="phan_cong_buoc_id" type="hidden" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xác nhận xóa
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
