@model BTL.Web.Models.NhanVien

@{
    ViewData["Title"] = "Xóa nhân viên";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title text-danger">@ViewData["Title"]</h3>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">
                            <i class="fas fa-exclamation-triangle"></i> Cảnh báo!
                        </h4>
                        <p>Bạn có chắc chắn muốn xóa nhân viên này không? Hành động này không thể hoàn tác.</p>
                        <hr>
                        <p class="mb-0">Hãy kiểm tra kỹ thông tin trước khi xác nhận xóa.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Thông tin nhân viên sẽ bị xóa</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.nv_id)</dt>
                                        <dd class="col-sm-9">
                                            <span class="badge bg-primary fs-6">@Html.DisplayFor(model => model.nv_id)</span>
                                        </dd>

                                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ho_ten)</dt>
                                        <dd class="col-sm-9">
                                            <h5 class="mb-0 text-danger">@Html.DisplayFor(model => model.ho_ten)</h5>
                                        </dd>

                                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.loai_nv)</dt>
                                        <dd class="col-sm-9">
                                            <span class="badge bg-info fs-6">@BTL.Web.Models.LoaiNv.GetDisplayName(Model.loai_nv)</span>
                                        </dd>

                                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ngay_vao_lam)</dt>
                                        <dd class="col-sm-9">
                                            @if (Model.ngay_vao_lam.HasValue)
                                            {
                                                <span class="text-success fw-bold">@Model.ngay_vao_lam.Value.ToString("dd/MM/yyyy")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có</span>
                                            }
                                        </dd>

                                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.trang_thai)</dt>
                                        <dd class="col-sm-9">
                                            @if (Model.trang_thai == BTL.Web.Models.TrangThaiNv.ACTIVE)
                                            {
                                                <span class="badge bg-success fs-6">@BTL.Web.Models.TrangThaiNv.GetDisplayName(Model.trang_thai)</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger fs-6">@BTL.Web.Models.TrangThaiNv.GetDisplayName(Model.trang_thai)</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Thông tin bổ sung</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.LoaiNhanVien != null)
                                    {
                                        <dl class="row">
                                            <dt class="col-sm-5">Lương cơ bản:</dt>
                                            <dd class="col-sm-7">
                                                <span class="text-success fw-bold fs-5">@Model.LoaiNhanVien.luong_co_ban.ToString("N0") VNĐ</span>
                                            </dd>
                                        </dl>
                                    }

                                    @if (Model.ngay_vao_lam.HasValue)
                                    {
                                        var thamNien = DateTime.Today.Year - Model.ngay_vao_lam.Value.Year;
                                        if (DateTime.Today.Month < Model.ngay_vao_lam.Value.Month || 
                                            (DateTime.Today.Month == Model.ngay_vao_lam.Value.Month && DateTime.Today.Day < Model.ngay_vao_lam.Value.Day))
                                        {
                                            thamNien--;
                                        }

                                        <dl class="row">
                                            <dt class="col-sm-5">Thâm niên:</dt>
                                            <dd class="col-sm-7">
                                                <span class="badge bg-secondary fs-6">@thamNien năm</span>
                                            </dd>
                                        </dl>
                                    }
                                </div>
                            </div>

                            <div class="card mt-3">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Xác nhận xóa</h5>
                                </div>
                                <div class="card-body">
                                    <form asp-action="Delete" method="post">
                                        <input asp-for="nv_id" type="hidden" />
                                        <div class="d-grid gap-2">
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa nhân viên này?')">
                                                <i class="fas fa-trash"></i> Xác nhận xóa
                                            </button>
                                            <a asp-action="Index" class="btn btn-secondary">
                                                <i class="fas fa-times"></i> Hủy
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
