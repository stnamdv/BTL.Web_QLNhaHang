@model IEnumerable<BTL.Web.Models.NhanVienWithLoaiNhanVien>

@{
    ViewData["Title"] = ViewBag.Title ?? "Danh sách nhân viên";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm nhân viên
                        </a>
                        <a asp-action="GetActive" class="btn btn-success">
                            <i class="fas fa-user-check"></i> Nhân viên hoạt động
                        </a>
                        <a asp-action="Stats" class="btn btn-info">
                            <i class="fas fa-chart-bar"></i> Thống kê
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Search Form -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <form asp-action="Search" method="get" class="d-flex">
                                <input type="text" name="searchTerm" class="form-control me-2" 
                                       placeholder="Tìm kiếm theo tên nhân viên..." 
                                       value="@ViewBag.SearchTerm">
                                <button type="submit" class="btn btn-outline-primary">
                                    <i class="fas fa-search"></i>
                                </button>
                            </form>
                        </div>
                    </div>

                    @if (TempData["Message"] != null)
                    {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    @TempData["Message"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    @TempData["Error"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>@Html.DisplayNameFor(model => model.First().nv_id)</th>
                                                <th>@Html.DisplayNameFor(model => model.First().ho_ten)</th>
                                                <th>@Html.DisplayNameFor(model => model.First().TenLoaiNhanVien)</th>
                                                <th>@Html.DisplayNameFor(model => model.First().ngay_vao_lam)</th>
                                                <th>@Html.DisplayNameFor(model => model.First().ThamNien)</th>
                                                <th>@Html.DisplayNameFor(model => model.First().TrangThaiHienThi)</th>
                                                <th>@Html.DisplayNameFor(model => model.First().luong_co_ban)</th>
                                                <th class="text-center">Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                        <tr>
                                                            <td>@Html.DisplayFor(modelItem => item.nv_id)</td>
                                                            <td>
                                                                <strong>@Html.DisplayFor(modelItem => item.ho_ten)</strong>
                                                            </td>
                                                            <td>
                                                                <span class="badge bg-info">@Html.DisplayFor(modelItem => item.TenLoaiNhanVien)</span>
                                                            </td>
                                                            <td>
                                                                @if (item.ngay_vao_lam.HasValue)
                                                                {
                                                                            @item.ngay_vao_lam.Value.ToString("dd/MM/yyyy")
                                                                }
                                                                else
                                                                {
                                                                            <span class="text-muted">Chưa có</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (item.ThamNien.HasValue)
                                                                {
                                                                            <span class="badge bg-secondary">@item.ThamNien.Value năm</span>
                                                                }
                                                                else
                                                                {
                                                                            <span class="text-muted">-</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (item.trang_thai == BTL.Web.Models.TrangThaiNv.ACTIVE)
                                                                {
                                                                            <span class="badge bg-success">@Html.DisplayFor(modelItem => item.TrangThaiHienThi)</span>
                                                                }
                                                                else
                                                                {
                                                                            <span class="badge bg-danger">@Html.DisplayFor(modelItem => item.TrangThaiHienThi)</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                <span class="text-success fw-bold">@Html.DisplayFor(modelItem => item.luong_co_ban)</span>
                                                            </td>
                                                            <td class="text-center">
                                                                <div class="btn-group" role="group">
                                                                    <a asp-action="Details" asp-route-id="@item.nv_id" 
                                                                       class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                                                        <i class="fas fa-eye"></i>
                                                                    </a>
                                                                    <a asp-action="Edit" asp-route-id="@item.nv_id" 
                                                                       class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                                                        <i class="fas fa-edit"></i>
                                                                    </a>
                                                                    <a asp-action="Delete" asp-route-id="@item.nv_id" 
                                                                       class="btn btn-sm btn-outline-danger" title="Xóa">
                                                                        <i class="fas fa-trash"></i>
                                                                    </a>
                                                                </div>
                                                            </td>
                                                        </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                    }
                    else
                    {
                                <div class="text-center py-5">
                                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">Không có nhân viên nào</h5>
                                    <p class="text-muted">Hãy thêm nhân viên đầu tiên để bắt đầu.</p>
                                    <a asp-action="Create" class="btn btn-primary">
                                        <i class="fas fa-plus"></i> Thêm nhân viên
                                    </a>
                                </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
